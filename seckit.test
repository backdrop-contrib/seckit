 /**
  * Tests HTTP Strict Transport Security has all directives.
  */
  public function testHSTSAllDirectves() {
    $form = array(
      'seckit_ssl[hsts]' => 1,
      'seckit_ssl[hsts_max_age]' => 1000,
      'seckit_ssl[hsts_subdomains]' => 1,
